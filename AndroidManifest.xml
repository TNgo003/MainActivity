<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firebase.androidchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/firebase_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.firebase.androidchat.MainActivity"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.firebase.androidchat.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/><category android:name="android.intent.category.LAUNCHER"/>
                
            </intent-filter>
        </activity>
        <activity
            android:name="com.firebase.androidchat.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.firebase.androidchat.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="com.firebase.androidchat.LanguageActivity"
            android:label="@string/title_activity_language" >
        </activity>
         <activity
            android:name="com.firebase.androidchat.TabbedSwipeActivity"
            android:label="@string/title_activity_tabbed_swipe" >
        </activity>
    </application>

</manifest>
